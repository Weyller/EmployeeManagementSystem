<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pranaykumar.dbmsproject.EnterActivity">

    <EditText
        android:id="@+id/emp_id"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/custom_textbox"
        android:ems="10"
        android:hint="EMPLOYEE ID"
        android:padding="5dp"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/emp_name"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_textbox"
        android:ems="10"
        android:hint="NAME"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#000"
        android:layout_below="@+id/emp_id"
        android:layout_alignLeft="@+id/emp_id"
        android:layout_alignStart="@+id/emp_id" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_textbox"
        android:ems="10"
        android:hint="PHONE"
        android:inputType="phone"
        android:padding="5dp"
        android:textColor="#000"
        android:layout_below="@+id/emp_name"
        android:layout_alignLeft="@+id/emp_name"
        android:layout_alignStart="@+id/emp_name"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_textbox"
        android:ems="10"
        android:hint="GENDER"
        android:padding="5dp"
        android:textColor="#000"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_textbox"
        android:ems="10"
        android:hint="EMAIL"
        android:padding="5dp"
        android:textColor="#000"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/gender"
        android:layout_alignLeft="@+id/gender"
        android:layout_alignStart="@+id/gender"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/submit_button"
        android:background="@drawable/custom_button"
        android:textColor="#ffffff"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:onClick="submitData" />


</RelativeLayout>
